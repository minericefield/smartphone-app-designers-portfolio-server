<form action="/designs/create" method="post" enctype="multipart/form-data">
  <div class="form-group">
    <label for="titleHeading">Title Heading</label>
    <input type="text" class="form-control" id="titleHeading" name="titleHeading" placeholder="Title Heading" value="{{ titleHeading }}">
  </div>
  <div class="form-group">
    <label for="title">Title</label>
    <input type="text" class="form-control" id="title" name="title" placeholder="Title" value="{{ title }}">
  </div>
  <div class="form-group">
    <label for="descriptionHeading">Description Heading</label>
    <input type="text" class="form-control" id="descriptionHeading" name="descriptionHeading" placeholder="Description Heading" value="{{ descriptionHeading }}">
  </div>
  <div class="form-group">
    <label for="description">Description</label>
    <input type="text" class="form-control" id="description" name="description" placeholder="Description" value="{{ description }}">
  </div>
  <div class="form-group">
    <label for="file">Image</label>
    <input type="file" class="form-control-file" id="file" name="file" accept="image/*">
    {{#each validationErrors.fieldname}}
      <div class="invalid-feedback d-block">
        {{ this }}
      </div>
    {{/each}}
    {{#each validationErrors.originalname}}
      <div class="invalid-feedback d-block">
        {{ this }}
      </div>
    {{/each}}
    {{#each validationErrors.size}}
      <div class="invalid-feedback d-block">
        {{ this }}
      </div>
    {{/each}}
  </div>
  <div class="form-group">
    <label for="role">Category</label>
    <select class="form-control" id="category" name="category">
      {{#each categories}}
      <option value="{{ getValueFromDoc this '_id' }}" {{#if (stringifyEquals (getValueFromDoc this '_id') ../category)}} selected {{/if}}>
        {{ getValueFromDoc this 'name' }}
      </option>
      {{/each}}
    </select>
  </div>
  <div class="form-group">
    <label for="baseColor" class="form-label">Base Color</label> 
    <input type="color" class="form-control form-control-color" id="baseColor" name="baseColor" value="{{ defaultTo '#FFFFFF' baseColor }}">
  </div>
  <div class="form-group">
    <label for="isPublic" class="form-label">Public</label> 
    <div class="form-check">
      <input class="form-check-input" type="checkbox" name="isPublic" value="1" {{#if (stringifyEquals isPublic 1)}} checked {{/if}}>
    </div>
  </div>

  <button type="submit" class="btn btn-primary d-block ml-auto">Submit</button>
</form>

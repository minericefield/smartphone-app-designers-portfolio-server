{{#if errorMessage }}
  <div class="alert alert-danger" role="alert">
    {{ errorMessage }}
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
{{/if}}
{{#if successMessage }}
  <div class="alert alert-success" role="alert">
    {{ successMessage }}
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
{{/if}}

<form action="/auth" method="post" class="w-50 m-auto border border-light rounded p-4 shadow">
  <div class="form-group">
    <label for="email">Email</label>
    <input type="text" class="form-control" id="email" name="email" placeholder="Email" value="{{ email }}">
    {{#each validationErrors.email}}
      <div class="invalid-feedback d-block">
        {{ this }}
      </div>
    {{/each}}
  </div>
  <div class="form-group">
    <label for="password">Password</label>
    <input type="password" class="form-control" id="password" name="password" placeholder="Password" value="{{ password }}">
    {{#each validationErrors.password}}
      <div class="invalid-feedback d-block">
        {{ this }}
      </div>
    {{/each}}
  </div>
  <div class="text-center">
    <button type="submit" class="btn btn-primary mb-4">Login</button>

    <a href="/auth/reset_password" class="d-block">
      Forgot Password?
    </a>
  </div>
</form>
